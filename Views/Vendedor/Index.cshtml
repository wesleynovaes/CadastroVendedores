@model List<VendedorModel>

@{
    ViewData["Title"] = "Listagem de Vendedores";
    
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Vendedor" asp-action="Criar">Adicionar novo Vendedor</a>
    </div><br />

    <h1 class="display-4">Listagem de Vendedores</h1><br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">E-mail</th>fro
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(VendedorModel vendedor in Model)
                {
                    <tr>
                        <th scope="row">@vendedor.Id</th>
                        <td>@vendedor.Nome</td>
                        <td>@vendedor.Cpf</td>
                        <td>@vendedor.Email</td>
                        <td>@vendedor.Celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp.router-id="@vendedor.Id" asp-controller="Vendedor" asp-action="Clientes">Clientes</a>
                                <a role="button" class="btn btn-secondary" asp.router-id="@vendedor.Id" asp-controller="Vendedor" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp.router-id="@vendedor.Id" asp-controller="Vendedor" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

